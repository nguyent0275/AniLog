<meta name="viewport" content="width=device-width, initial-scale=1.0">

<div id="big-list-container">
  <table id="list-table">
    <caption class="table caption-top">
      My List
    </caption>
    <tr>
      <th>Title</th>
      <th>Score</th>
      <th>Progress</th>
    </tr>
    {{#each user.statuses as |anime|}}
      <tr id={{@index}}>
        <td id="title-{{@index}}">{{anime.anime_title}}</td>
        <td>{{anime.rating}}</td>
        <td>{{anime.watch_status}}</td>
        <td id="button-{{@index}}"></td>
      </tr>
    {{/each}}
  </table>

    <div class="popup" id="popup">
        <div id="edit-anime-box"></div>
  </div>
    </div>

</div>

